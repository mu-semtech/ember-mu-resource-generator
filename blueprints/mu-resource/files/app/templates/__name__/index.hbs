<div class="content">
  <h5><%= entityName %></h5>
  <div class="form">
    <%=
    attributes.map( function(attribute) {
      if(attribute.kind == "language-string-set") {
        return "<div class=\"row\"><div class=\"col s4\">" + attribute.name + "</div>"
    + "<div class=\"col s8\">"
    + "{{#each model." + attribute.itemVar + " as |label index|}}"
    + "<div class=\"row\">"
    + "<div class=\"col s8 field--location\">{{label.content}}</div>"
    + "<div class=\"col s4 field--language\">{{label.language}}</div>"
    + "</div>"
    + "{{/each}}</div></div>";
      }
      else {
        return "<div class=\"row\"><div class=\"col s12 m4\">" + attribute.name + "</div><div class=\"col s12 m8\">{{model." + attribute.itemVar +"}}</div></div>";
      }
    }).join("\n  ")
    %>

    <div class="row">
      <div class="col s12">
	{{#link-to "<%= entityName %>.edit" model.id class="btn btn--submit right"}}edit{{/link-to}}
      </div>
    </div>
  </div>

  Belongs to:
  <ul>
    <%=
    belongsToRelationships.map( function(relationship) {
    return "" +
    "  <li>\n" +
    "    {{#if model." + relationship.itemVar + "}}\n" +
    "      {{link-to \"" + relationship.name + "\" \"" + relationship.name + "\" model." + relationship.itemVar + "}}\n" +
    "    {{else}}\n" +
        "      No " + relationship.itemVar + " set\n" +
    "    {{/if}}\n" +
    "  </li>"
    }).join("\n")
    %>
  </ul>

  Has many:
  <table>
    <th><td>Relationship</td><td>Links</td></th>
    <%=
    hasManyRelationships.map( function(relationship) {
    var itemVar = relationship.itemVar;
    var kind = relationship.kind;
    var name = relationship.name;
    return "" +
    "  <tr>\n" +
      "    {{#each model." + name + " as |" + itemVar + "|}}\n" +
      "      {{link-to " + itemVar + ".title \"" + kind + "\" " + itemVar + "}}\n" +
      "    {{/each}}\n" +
      "  </tr>\n"
    } ).join("")
    %></table>
</div>
