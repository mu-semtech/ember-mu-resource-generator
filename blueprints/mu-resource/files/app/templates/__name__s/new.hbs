<ul>
  <%=
    belongsToRelationships.map( function(relationship) {
      return "" +
        "  <li>\n" +
        "    {{#if model." + relationship.itemVar + "}}\n" +
        "      {{link-to \"" + relationship.name + "\" \"" + relationship.name + "\" model." + relationship.itemVar + "}}\n" +
        "    {{else}}\n" +
        "      No " + relationship.itemVar + " set\n" +
        "    {{/if}}\n" +
        "  </li>"
    }).join("\n")
  %>
</ul>

